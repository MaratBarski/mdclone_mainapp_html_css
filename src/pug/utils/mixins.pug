mixin h1(v)
	.container
		.row
			.col-12
				h1= v


mixin breadcrumbs(links)
	- var len=links.length
	.container.d-none.d-md-block
		.row
			.col-12
				ul.breadcrumb
					- var i=0
					while i < len-1
						li.breadcrumb__item
							a(href=links[i].href).breadcrumb__link=links[i].name
						- i++
					li.breadcrumb__item
						span=links[i].name