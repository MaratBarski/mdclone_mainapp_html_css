include ../utils/mixins
block variables

doctype html
html(lang='ru')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title #{title}
		//- link(href='https://fonts.googleapis.com/css?family=Open+Sans&display=swap', rel='stylesheet')

	body(class=body_scroll=='false'?'no-scroll':'')
		.wrapper
			.shadow-site(class=body_scroll=='false'?'is-visible':'')
			if header=='open'
				include ./header-open
			else
				include ./header
			main(class=(header=='open')?'open':'')
				.content-page
					block breadcrumb
					if h1
						+h1(h1)
					block content
			if footer
				include ./footer
