extends ../layout/main

block variables
	- var title = 'Usage Dashboard';
	//- - var mainIndent = 'false';
	//- - var h1 = 'Usage Dashboard';

block content
	.usage-dashboard
		include ../components/usage-dashboard-head

		section.usage-dashboard-top
			.container-fluid
				.row
					.col-12
						.usage-dashboard-top__content
							.split-btn
								.split-btn__title Download as CSV
								.split-btn__arr
									+svg('ic-select-arr-down','ic-select-arr-down')

								.split-btn__popup
									.split-btn__item Action number 00001
									.split-btn__item Action number 00002
									.split-btn__item Action number 00003
									.split-btn__item Action number 00004


							.usage-dashboard-top__tab
								-
									var tabs=[
										{name:'General Usage', link:'#', class:'d-none d-md-inline-block'},
										{name:'Monthly Activity', link:'#', class:'d-none d-md-inline-block'},
										{name:'Activity per User', link:'#', class:'d-none d-lg-inline-block'},
										{name:'Top 10 Users', link:'#', active:'true', class:'d-none d-xl-inline-block'},
										{
											more: 'true',
											name:'Retention',
											link:'#',
											popup_list:[
												{name:'Created', link:'#'},
												{name:'Table', link:'#'},
												{name:'General Usage', link:'#', class:'d-md-none'},
												{name:'Monthly Activity', link:'#', class:'d-md-none'},
												{name:'Activity per User', link:'#', class:'d-lg-none'},
												{name:'Top 10 Users', link:'#', class:'d-xl-none'},
											]
										}
									];
								+tabsPage(tabs)

		- var usageParam={environment:'true', switch:'true'};
		+usageDashboardPanel(usageParam)

		section.category-list
			.container-fluid
				.row
					.col-12
						.category-list__content
							.category-list__label Top 10 users in the last:

							.category-list__list
								.category-list__item.active
									a(href="#").category-list__link Month

								.category-list__item
									a(href="#").category-list__link 3 Months

								.category-list__item
									a(href="#").category-list__link 6 Months

		section.graph-wrap
			.container-fluid
				.row
					.col-lg-6
						- var graphInfo={head:'New Queries'};
						+graph(graphInfo)

					.col-lg-6
						- var graphInfo={head:'File Downloads'};
						+graph(graphInfo)