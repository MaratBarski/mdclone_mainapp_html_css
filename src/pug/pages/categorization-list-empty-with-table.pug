extends ../layout/main

block variables
	- var title = 'Categorization list';
	//- - var h1 = 'Categorization list';

block content
	+catListHead

	section.admin-table-wrap
		.container-fluid
			.row
				.col-12
					.admin-table-wrap__action
						+formSearch('d-md-none')

						.admin-table-wrap__col
							a.btn.btn_icon(href='#') + New Categorization

						.admin-table-wrap__col
							+formSearch('d-none d-md-block')

					table.admin-table
						thead
							tr.admin-table__head
								th.admin-table__item.w-md-5
									span.admin-table__sort
										span.admin-table__sort-up
										span.admin-table__sort-down
									|Name

								th.admin-table__item.d-none.d-xxl-table-cell.w-md-5
									span.admin-table__sort
										span.admin-table__sort-up
										span.admin-table__sort-down
									|File Name

								th.admin-table__item.d-none.d-md-table-cell
									span.admin-table__sort
										span.admin-table__sort-up
										span.admin-table__sort-down
									|Modified

								th.admin-table__item.d-none.d-md-table-cell.admin-table__item_center
									span.admin-table__sort
										span.admin-table__sort-up
										span.admin-table__sort-down
									|State

								th.admin-table__item.d-none.d-md-table-cell
									span.admin-table__sort
										span.admin-table__sort-up
										span.admin-table__sort-down
									|Environment

									+adminTableFilter()

								th.admin-table__item.d-none.d-lg-table-cell.admin-table__item_center
									span.admin-table__sort
										span.admin-table__sort-up
										span.admin-table__sort-down
									|In Use

								th.admin-table__item.admin-table__item_menu.w-md-1

					section.empty-table
						.container-fluid
							.row
								.col-12
									.empty-table__content
										.empty-table__head Nothing matches your search.
										.empty-table__text Try using the filters or search different keywords.

										.empty-table__img
											img(src="assets/img/import-file-empty.png", alt="", style="height: 210px")