extends ../layout/main

block variables
	- var title = 'Categorization list';
	- var body_scroll = 'false';
	//- - var h1 = 'Imported files';

block modal
	+modalWindowCatReplace

block content
	+catListHead

	section.admin-table-wrap
		.container-fluid
			.row
				.col-12
					.admin-table-wrap__action
						+formSearch('d-md-none')

						.admin-table-wrap__col
							a.btn.btn_icon(href='#') + New Categorization

						.admin-table-wrap__col
							+formSearch('d-none d-md-block')

					include ../components/category-list-table

					+pager('Showing 1-12 of 72 categorizations')