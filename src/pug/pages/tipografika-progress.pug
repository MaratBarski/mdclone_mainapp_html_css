extends ../layout/main

block variables
	- var title = 'Typography';
	- var h1 = 'Progress and tags';

block content
	section
		.container-fluid
			.row
				.col-12
					.h2 Progress
					.progress
						.progress__bg
						.progress__text 0%

					br
					.progress.progress_red
						.progress__bg(style='width: 25%')
						.progress__text 25%

					br
					.progress.progress_yellow
						.progress__bg(style='width: 50%')
						.progress__text 50%

					br
					.progress.progress_green
						.progress__bg(style='width: 75%')
						.progress__text 75%

					br
					br
					.h2 Tag
					.tag Admin
					br
					.tag.tag_green Superadmin
