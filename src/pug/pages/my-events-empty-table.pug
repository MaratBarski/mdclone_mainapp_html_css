extends ../layout/main

block variables
	- var title = 'My Events';
	- var h1 = 'My Events';

block content
	section.query-wrap
		.container-fluid
			.row
				.col-12
					.admin-table-wrap
						.admin-table-wrap__action
							.admin-table-wrap__col
								.split-btn
									.split-btn__title + Combined Event
									.split-btn__arr
										+svg('ic-select-arr-down','ic-select-arr-down')

									.split-btn__popup
										.split-btn__item Action number 0000001
										.split-btn__item Action number 0000002
										.split-btn__item Action number 0000003
										.split-btn__item Action number 0000004

							.admin-table-wrap__col
								+formSearch('d-none d-md-block','Searchâ€¦')


						table.admin-table.admin-table_orange
							thead
								tr.admin-table__head
									th.admin-table__item
										span.admin-table__sort
											span.admin-table__sort-up
											span.admin-table__sort-down
										|Name

									th.admin-table__item.d-none.d-md-table-cell
										span.admin-table__sort.admin-table__sort_asc
											span.admin-table__sort-up
											span.admin-table__sort-down
										|Modified
										+svg('ic-info','ic-info')

									th.admin-table__item.d-none.d-md-table-cell
										span.admin-table__sort
											span.admin-table__sort-up
											span.admin-table__sort-down
										|Generated
										+svg('ic-info','ic-info')

									th.admin-table__item.d-none.d-lg-table-cell.admin-table__item_center
										|Event Type

									th.admin-table__item.d-none.d-lg-table-cell
										|Status

									th.admin-table__item.admin-table__item_menu

						section.empty-table.empty-table_orange
							.container-fluid
								.row
									.col-12
										.empty-table__content
											.empty-table__head Nothing matches your search.
											.empty-table__text Try different keywords or check your spelling.

											.empty-table__img
												img(src="assets/img/import-file-empty.png", alt="")