extends ../layout/main

block variables
	- var title = 'Home';
	- var h1 = 'Home';

block content
	section.query-wrap
		.container-fluid
			.row
				.col-12
					.unwrap.active
						.unwrap__head
							.unwrap__head-content
								span.unwrap__arr.ic-hover
									+svg('ic-select-arr-down','ic-select-arr-down')
								span.unwrap__title My Queries | 
									span.unwrap__count 0

						.unwrap__content
							.admin-table-wrap
								.admin-table-wrap__action
									.admin-table-wrap__col
										a.btn.btn_icon(href='#') + New Query

									.admin-table-wrap__col
										+formSearch('d-none d-md-block','Search…')

								table.admin-table.admin-table_yellow
									thead
										tr.admin-table__head
											th.admin-table__item
												span.admin-table__sort
													span.admin-table__sort-up
													span.admin-table__sort-down
												|Name

											th.admin-table__item.d-none.d-md-table-cell
												span.admin-table__sort.admin-table__sort_desk
													span.admin-table__sort-up
													span.admin-table__sort-down
												|Modified
												+svg('ic-info','ic-info')

											th.admin-table__item.d-none.d-md-table-cell
												span.admin-table__sort
													span.admin-table__sort-up
													span.admin-table__sort-down
												|Created

											th.admin-table__item.d-none.d-lg-table-cell.admin-table__item_center
												|Shared

											th.admin-table__item.d-none.d-lg-table-cell.admin-table__item_center
												|File

											th.admin-table__item.d-none.d-lg-table-cell.admin-table__item_center
												|Key
												+svg('ic-info','ic-info')

											th.admin-table__item.d-none.d-xl-table-cell.admin-table__item_right
												|Columns

											th.admin-table__item.d-none.d-xxl-table-cell.admin-table__item_right
												span.admin-table__sort
													span.admin-table__sort-up
													span.admin-table__sort-down
												|Rows
												+svg('ic-info','ic-info')

											th.admin-table__item.admin-table__item_menu

								section.empty-table.empty-table_yellow.empty-table_small
									.container-fluid
										.row
											.col-12
												.empty-table__content
													.empty-table__head Nothing matches your search.
													.empty-table__text Try using the filters or search different keywords.

													.empty-table__img
														img(src="assets/img/empty-search.png", alt="", style="height: 102px;")
						

						

	section.query-wrap
		.container-fluid
			.row
				.col-12
					.unwrap
						.unwrap__head
							.unwrap__head-content
								span.unwrap__arr.ic-hover
									+svg('ic-select-arr-down','ic-select-arr-down')
								span.unwrap__title Queries shared with me | 
									span.unwrap__count 4

							+formSearch('','Search…')

						.unwrap__content
							include ../components/home-table-shared

	section.query-wrap
		.container-fluid
			.row
				.col-12
					.unwrap
						.unwrap__head
							.unwrap__head-content
								span.unwrap__arr.ic-hover
									+svg('ic-select-arr-down','ic-select-arr-down')
								span.unwrap__title My Approval Keys | 
									span.unwrap__count 2

						.unwrap__content
							include ../components/home-table-key