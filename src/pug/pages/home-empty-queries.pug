extends ../layout/main

block variables
	- var title = 'Home';
	- var h1 = 'Home';

block content
	section.query-wrap
		.container-fluid
			.row
				.col-12
					.unwrap.active
						.unwrap__head
							.unwrap__head-content
								span.unwrap__arr.ic-hover
									+svg('ic-select-arr-down','ic-select-arr-down')
								span.unwrap__title My Queries | 
									span.unwrap__count 0

						.unwrap__content
							.empty-query
								a.btn.btn_icon(href='#') + New Query

								.empty-query__content
									.empty-query__head Nothing matches your search
									.empty-query__text Try using the filters or search different keywords

									.empty-query__img
										img(src="assets/img/empty-search.png", alt="")

						

