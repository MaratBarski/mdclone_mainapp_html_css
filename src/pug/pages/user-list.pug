extends ../layout/main

block variables
	- var title = 'User List';
	//- - var h1 = 'User List';

block content
	include ../components/user-list-top

	section.admin-table-wrap
		.container-fluid
			.row
				.col-12
					.admin-table-wrap__action
						+formSearch('d-md-none')

						.admin-table-wrap__col
							a.btn.btn_icon(href='#') + New User

						.admin-table-wrap__col
							+formSearch('d-none d-md-block')

					.admin-table-content
						.admin-table-info
							include ../components/user-list-details

						include ../components/user-list-table

						+pager('Showing 1-12 of 102 users')